{% extends 'front/layout.html.twig' %}






    {% block content %}
        <section class="breadcumb-area jarallax bg-img af">
            <div class="breadcumb">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="content">
                                <h2>My Defective Parts</h2>
                                <ul>
                                    <li><a href="{{ path('main_front') }}">Home</a></li>
                                    <li><a href="javascript:void(0)">My Defective Parts</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="shop-page section">
            <div class="container">
                <div class="row">

                    <div class="col-sm-9 pd-0">
                        <div class="col-sm-12">
                            {% if pieces %}
                            <div class="filter-area">

                                <div class="list-grid">
                                    <ul class="list-inline">
                                        <li><a href="#" id="gridview"><i class="fa fa-th"></i></a></li>
                                        <li><a href="#" id="listview"><i class="fa fa-list"></i></a></li>
                                    </ul>
                                </div>

                            </div>
                                {% else %}
                                <h2>no result found !</h2>
                            {% endif %}
                        </div>
                        <div class="col-sm-12 pd-0">
                            {% for piece in pieces %}
                                <div class="col-sm-4 products">
                                    <figure><<img src="{{ asset('java/huntkingdom/src/Uploads/' ~ piece.image) }}"></figure>
                                    <div class="contents">
                                        <h3>{{ piece.nom }}</h3>
                                        <p>{{ piece.description }}</p>
                                        {% if not piece.etat%}
                                            <a href="{{ path('reparation_front_show_progress',{'idP': piece.id}) }} " class="btn4" >show progress</a>
                                            {% else %}
                                            <a href="{{ path('reparation_front_show_ready',{'idP': piece.id}) }} " class="btn1" style="background: #1e7e34!important;" >Ready</a>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}

                        </div>

                    </div>
                </div>
            </div>
        </section>



    {% endblock %}



