            }
            else if (!$("#nbheures").val().match(/^[0-9]+$/i))
            {
                $("#errorH").show();
                e.preventDefault();
            }
            else
            {
                $("#errorH").hide();
            }


            /****  Lieu *****/

            if ( $("#lieu").val()==""){
                $("#errorLieu").show().text("Choose Place");
                e.preventDefault();

            }
            else if (!$("#lieu").val().match(/^[0-9]|[a-z]+$/i))
            {
                $("#errorLieu").show().text("field does not contain symbols");
