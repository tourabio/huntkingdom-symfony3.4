{% extends 'dashboard/base.html.twig' %}

{% block content %}

    <section id="main-content">
        <section class="wrapper">

            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Form validations
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <div class="form-validate form-horizontal" id="feedback_form" method="get" action="">
                                    {{ form_start(form,{'attr': {'novalidate': 'novalidate','id':'formhebergement'} }) }}
                                    <div class="form-group " id="errorAdresse">
                                        <label for="inputError" class="control-label col-lg-2">Address <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.adresse,{'attr':{'type':'text','class':'form-control'},'id':'adresse'}) }}
                                        </div>
                                    </div>
                                    <div class="form-group " id="errorCapacite">
                                        <label for="inputError" class="control-label col-lg-2">Capacity <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.capacite,{'attr':{'type':'text','class':'form-control'},'id':'capacite'}) }}
                                        </div>
                                    </div>
                                    <div class="form-group " id="errorType">
                                        <label for="inputError" class="control-label col-lg-2">Type <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.type,{'attr':{'type':'text','class':'form-control'},'id':'type'}) }}
                                        </div>
                                    </div>

                                    <div class="form-group " id="errorNbChambre">
                                        <label for="inputError" class="control-label col-lg-2">Number of rooms <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.nbChambre,{'attr':{'type':'text','class':'form-control'},'id':'nbChambre'}) }}
                                        </div>
                                    </div>
                                    <div class="form-group " id="errorNbLits">
                                        <label for="inputError" class="control-label col-lg-2">number of beds <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.nbLits,{'attr':{'type':'text','class':'form-control'},'id':'nbLits'}) }}
                                        </div>
                                    </div>
                                    <div class="form-group " id="errorPrixParJour">
                                        <label for="inputError" class="control-label col-lg-2">Price <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.prixParJour,{'attr':{'type':'number','class':'form-control','placeholder':'Prix...'},'id':'prixParJour'}) }}
                                        </div>
                                    </div>
                                    <div class="form-group " id="errorDescription">
                                        <label for="inputError" class="control-label col-lg-2">Description <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.description,{'attr':{'type':'textarea','class':'form-control','placeholder':'Description...'},'id':'description'}) }}
                                        </div>
                                    </div>
                                    <div class="form-group " id="errorImage">
                                        <label for="inputError" class="control-label col-lg-2">image <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.image,{'attr':{'class':'form-control'},'id':'image'}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            {{ form_widget(form.Submit, {'attr': {'class': 'btn btn-primary'}})}}
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>

                            </div>

                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>


{% endblock %}

{% block js %}
    <script type="text/javascript">
        $("#formhebergement").submit(function(e){

            /****  adresse *****/
            if ( $("#adresse").val()==""){
                $("#errorAdresse").attr('class','form-group has-error');
                $("#adresse").attr('placeholder','enter address');
                e.preventDefault();

            }
            else
            {
                $("#errorAdresse").attr('class','form-group');
                $("#adresse").attr('placeholder','address');
            }


            /****  CAPACITE *****/
            if ( $("#capacite").val()==0){
                $("#errorCapacite").attr('class','form-group has-error');
                $("#capacite").attr('placeholder','enter capacity');
                e.preventDefault();

            }
            else
            {
                $("#errorCapacite").attr('class','form-group');
            }

            /****  NbChambre *****/
            if ( $("#nbChambre").val()==0){
                $("#errorNbChambre").attr('class','form-group has-error');
                $("#nbChambre").attr('placeholder','enter number of rooms');
                e.preventDefault();

            }
            else
            {
                $("#errorNbChambre").attr('class','form-group');
            }

            /****  NbLits *****/
            if ( $("#nbLits").val()==0){
                $("#errorNbLits").attr('class','form-group has-error');
                $("#nbLits").attr('placeholder','enter the number of beds');
                e.preventDefault();

            }
            else
            {
                $("#errorNbLits").attr('class','form-group');
            }

            /****  prixParJour *****/
            if ( $("#prixParJour").val()<20){
                $("#errorPrixParJour").attr('class','form-group has-error');
                $("#prixParJour").attr('placeholder','enter the price per day');
                e.preventDefault();

            }
            else
            {
                $("#errorPrixParJour").attr('class','form-group');
            }

            /****  description *****/
            if ( $("#description").val().length<20){
                $("#errorDescription").attr('class','form-group has-error');
                $("#description").attr('placeholder','enter description');
                e.preventDefault();

            }
            else
            {
                $("#errorDescription").attr('class','form-group');
            }

            /****  image *****/
            if ( $("#image").val()==""){
                $("#errorImage").attr('class','form-group has-error');
                $("#image").attr('placeholder','enter image');
                e.preventDefault();

            }
            else
            {
                $("#errorImage").attr('class','form-group');
            }

            {#
                        /****  categorie *****/

                        if ( $("#categorie").val()==""){
                            $("#errorCategorie").show();
                            e.preventDefault();

                        }
                        else
                        {
                            $("#errorCategorie").hide();
                        }


                        /****  Decription *****/

                        if ( $("#descriptionD").val()==""){
                            $("#errordescriptionD").show();
                            e.preventDefault();
                        }
                        else
                        {
                            $("#errordescriptionD").hide();
                        }



                        /****  IMAGE *****/

                        if ( $("#image").val()==""){
                            $("#errorImage").show();
                            e.preventDefault();
                        }
                        else
                        {
                            $("#errorImage").hide();
                        }

                        #}




        });
    </script>
{% endblock %}