{% extends 'dashboard/base.html.twig' %}

{% block content %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="{{path('main_dashboard')}}">Home</a></li>
                        <li><i class="fa fa-table"></i>Transportation</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Advanced Table
                            <br><br>
                            <div class="btn-group">
                                <a class="btn btn-default" href="{{ path('ajouter_transport')}}"><span class="icon_plus_alt"></span></a>
                            </div>
                            <br><br>
                        </header>
                        <ul class="nav top-menu">
                            <li>
                                <form  action="{{ path('list_transport') }}" class="navbar-form" method="get">
                                    <input class="form-control" name="filter" type="text" placeholder="Search for Brand">
                                </form>
                            </li>
                        </ul><br>
                        <div class="count">
                            2 items out of {{ transports.getTotalItemCount }}
                        </div>
                        <table class="table table-striped table-advance table-hover">
                            <tbody>
                            <tr>
                                <th><i class="icon_profile"></i> {{ knp_pagination_sortable(transports,'Id','bp.id') }}</th>
                                <th><i class="icon_wallet"></i> {{ knp_pagination_sortable(transports,'Price/day','bp.prixParJour') }}</th>
                                <th><i class="icon_mobile"></i> Brand</th>
                                <th><i class="icon_info_alt"></i> Category</th>
                                <th><i class="icon_image"></i> Image</th>
                                <th><i class="icon_cogs"></i> Action</th>

                            </tr>
                            {% for h in transports %}
                                <tr>
                                    <td>{{ h.id }}</td>
                                    <td>{{ h.prixParJour }}</td>
                                    <td>{{ h.marque }}</td>
                                    <td>{{ h.categorie }}</td>
                                    <td><img src="{{ asset('java/huntkingdom/src/Uploads/'~h.getImage()) }}" width="70" height="70"alt="moy de transport" /></td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="{{ path('modifier_transport',{id:h.id})}}"><i class="icon_pencil-edit_alt"></i></a>
                                            <a class="btn btn-danger" href="{{ path('supprimer_transport',{id:h.id})}}"><i class="icon_close_alt2"></i></a>
                                            <a class="btn btn-succes" href="{{ path('one_transport',{id:h.id}) }}"><i class="icon_info_alt"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <div class="text-center">
                            <ul class="pagination">
                                {{ knp_pagination_render(transports) }}
                            </ul>
                        </div>
                    </section>
                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
{% endblock %}
